            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAgLmpXRShrlIr_YgmnqtX32CtDlwL3R5Y" />

        <activity
            android:name=".ui.ItemDetails"
            android:exported="false"
            android:label="@string/title_activity_item_details"
            android:theme="@style/Theme.FoodDonation" />
        <activity
            android:name=".ui.recyclerView"
            android:exported="false"
            android:label="@string/title_activity_recycler_view"
            android:theme="@style/Theme.FoodDonation" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FoodDonation">
